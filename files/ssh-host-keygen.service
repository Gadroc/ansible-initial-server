[Unit]
Description=OpenSSH Server Key Generation
Before=ssh.service
ConditionPathExists=/etc/run-ssh-host-keygen-once

[Service]
# remove all host keys first, so that all will be refreshed
# (only executed on first boot)
ExecStart=/bin/bash -c '/usr/bin/rm -v -f /etc/ssh/*key*'
ExecStart=/usr/bin/ssh-keygen -A
ExecStart=/usr/bin/rm -v -f /etc/run-ssh-host-keygen-once
Type=oneshot

[Install]
WantedBy=multi-user.target
