#!/bin/bash

export DEBIAN_FRONTEND=noninteractive

echo "removing X11 packages (server not desktop...)"
apt-get -y remove libx11.*

echo "purging packages which are no longer needed"
apt-get -y autoremove

echo "cleaning up dhcp leases"
rm /var/lib/dhcp/* 2>/dev/null

echo "cleaning up udev rules"
rm /etc/udev/rules.d/70-persistent-net.rules 2>/dev/null
mkdir /etc/udev/rules.d/70-persistent-net.rules
rm /lib/udev/rules.d/75-persistent-net-generator.rules 2>/dev/null
rm -rf /dev/.udev/ 2>/dev/null

echo "cleaning bash history"
unset HISTFILE
rm ~/.bash_history /home/{{ iserver_user }}/.bash_history 2>/dev/null

echo "minimize image size"
dd if=/dev/zero of=/EMPTY bs=1M
rm -f /EMPTY

touch /etc/.cleanup-for-template-done

exit 0
