# /etc/network/interfaces for guest VM

auto {{ iserver_interface }}
iface {{ iserver_interface }} inet static
    # Additional IP used by VM
    address {{ iserver_ip }}
    netmask 255.255.255.255
    # The Proxmox Main IP as gateway
    pointopoint {{ iserver_prox_main_ip }}
    gateway {{ iserver_prox_main_ip }}
