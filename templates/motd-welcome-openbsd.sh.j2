#!/bin/sh
# Ansible managed
# OpenBSD

# Note that the /etc/motd file is modified by /etc/rc whenever the system is booted.
# To keep any custom message intact, ensure that you leave *two blank lines* at the top,
# or your message will be overwritten.
topline=$(sysctl -n kern.version | sed 1q)
printf "$topline\n" > /etc/motd
printf "\n  Welcome to $(echo $topline | cut -d' ' -f1,2) Server\n\n" >> /etc/motd
