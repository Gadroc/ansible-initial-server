#!/bin/sh
# {{ ansible_managed }}
# OpenBSD

cp /etc/issue.original /etc/issue
sed -i '1s;^; \n;' /etc/issue
printf "ECDSA key fingerprint:\n$(ssh-keygen -l -f /etc/ssh/ssh_host_ecdsa_key.pub)\n" >> /etc/issue
printf "\nSSH user: {{ iserver_user }}     IP: $(ifconfig {{ iserver_obsd_interface }} | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p')\n\n" >> /etc/issue
